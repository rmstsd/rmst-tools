{
  "include": ["src/main", "src/preload", "src/common", "cfg", "pkg-script"],
  "compilerOptions": {
    "composite": true,

    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": false,

    "baseUrl": "./",
    "paths": {
      "@common/*": ["src/common/*"],
      "@main/*": ["src/main/*"]
    }
  }
}
