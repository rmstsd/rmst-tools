{
  "include": ["src/renderer", "src/common", "src/preload/*.d.ts"],
  "compilerOptions": {
    "composite": true,

    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": false,

    "baseUrl": ".",
    "paths": {
      "@common/*": ["src/common/*"],
      "@renderer/*": ["src/renderer/*"]
    }
  }
}
